<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arrow.a79361.arrowsmartcontroller.StateControlFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#000000">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Selected Luminaire or Mesh:"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:textColor="#CCCCCC" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lumspinner"
                android:layout_margin="5dp"
                android:background="#CCCCCC"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Mesh"
                    android:id="@+id/textView7"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#CCCCCC"
                    android:textSize="18dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/tbSwitch"
                    android:textColor="#BABABA" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Proximity"
                    android:id="@+id/textView14"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="#CCCCCC"
                    android:textSize="18dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/tbProx"
                    android:textColor="#BABABA" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="Change Password"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#CCCCCC"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnChPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHANGE" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SETTINGS:"
            android:id="@+id/textView8"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:textColor="#CCCCCC" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Flood light"
                    android:id="@+id/textView9"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="1dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/tbFlood"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textOff="Set"
                    android:textOn="Set"
                    android:textColor="#BABABA"
                    android:checked="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Task lighting"
                    android:id="@+id/textView10"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="1dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/tbTask"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textOff="Set"
                    android:textOn="Set"
                    android:textColor="#BABABA" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Proximity sensor"
                    android:id="@+id/textView11"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="1dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10dp" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/tbProxSet"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textOff="Set"
                    android:textOn="Set"
                    android:textColor="#BABABA" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Intensity"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:layout_margin="0dp"
                android:textColor="#CCCCCC"
                android:textSize="12dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tuneint"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView3" />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/SbIntensity"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CCT"
                android:id="@+id/textView13"
                android:layout_gravity="center_horizontal"
                android:layout_margin="0dp"
                android:textColor="#CCCCCC"
                android:textSize="12dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tunecct"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp">

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/SbCct"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
